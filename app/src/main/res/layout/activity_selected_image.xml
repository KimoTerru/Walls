<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.image.SelectedImageActivity"
    >

    <ImageView
        android:id="@+id/selected_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pre_view"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_brush"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/card_down"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back_brush"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/brush"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/brush"
                android:padding="16dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apply"
        android:textColor="@color/selago"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_brush"
        app:layout_constraintRight_toRightOf="@id/card_brush"
        app:layout_constraintLeft_toLeftOf="@id/card_brush"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_down"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintRight_toLeftOf="@id/card_brush"
        app:layout_constraintLeft_toRightOf="@id/card_info"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/down"
                android:padding="16dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textColor="@color/selago"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_down"
        app:layout_constraintRight_toRightOf="@id/card_down"
        app:layout_constraintLeft_toLeftOf="@id/card_down"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_info"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card_down"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/info"
                android:padding="16dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:textColor="@color/selago"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_info"
        app:layout_constraintRight_toRightOf="@id/card_info"
        app:layout_constraintLeft_toLeftOf="@id/card_info"
        />

</androidx.constraintlayout.widget.ConstraintLayout>